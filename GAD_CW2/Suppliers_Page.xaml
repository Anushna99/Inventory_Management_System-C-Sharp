<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GAD_CW2"
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="GAD_CW2.Suppliers_Page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Suppliers_Page">

    <Grid>
        <Label Content="Suppliers" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="36" FontWeight="Bold" Width="176"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Height="78" Margin="193,0,0,0" VerticalAlignment="Top" Width="440">
            <mah:Tile x:Name="tile_add" Content="Add Supplier" Height="Auto" Margin="3,3,3,0.4" Width="143" Click="tile_add_Click" />
            <mah:Tile x:Name="tile_view" Content="View/Remove Suppliers" Height="Auto" Margin="3,3,3,0.4" Click="tile_view_Click"/>
            <mah:Tile x:Name="tile_update" Content="Update Supplier" Height="Auto" Margin="3,3,3,0.4" Click="tile_update_Click"/>
        </StackPanel>
        <Frame x:Name="pages" Margin="0,83,0,-0.4"></Frame>
    </Grid>
</Page>
