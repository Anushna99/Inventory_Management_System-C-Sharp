<Page x:Class="GAD_CW2.Orders_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"

      xmlns:local="clr-namespace:GAD_CW2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Orders_Page">

    <Grid>
        <Label Content="Orders" HorizontalAlignment="Left" Margin="29,10,0,0" VerticalAlignment="Top" FontSize="36" FontWeight="Bold"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Height="100" Margin="172,10,0,0" VerticalAlignment="Top" Width="618">
            <mah:Tile x:Name="tile_place_order" Height="Auto" Margin="3,3,3,0" Width="308" Content="Place Order" FontSize="20" FontWeight="Bold" Click="tile_place_order_Click"></mah:Tile>
            <mah:Tile x:Name="tile_view_orders" Height="Auto" Margin="3,3,3,0" Width="298" Content="View Oders" FontSize="20" FontWeight="Bold" Click="tile_view_orders_Click"></mah:Tile>
        </StackPanel>
        <Frame x:Name="pages" Content="" HorizontalAlignment="Left" Height="521" Margin="0,115,0,-186.4" VerticalAlignment="Top" Width="800"/>

    </Grid>
</Page>
